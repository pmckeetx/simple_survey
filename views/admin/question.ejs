<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Simple Survey</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <link href='/stylesheets/style.css' rel='stylesheet'/>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Simple Survey</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/admin">Admin</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="xs-col-12">
                <ol class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li><a href="/admin">Admin</a></li>
                    <li><a href="/admin">Questions</a></li>
                    <li class="active">Question</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="xs-col-12">
                <!-- BEGIN CONTENT -->
                
                <h2>Question</h2>
                <h3><%= question.questionText %></h3>
                
                <% if( question.answers && question.answers.length ) { %>
                <div id="answerList" class="answer-list">
                    <ul>
                    <% for( var i = 0; i < question.answers.length; i++ ) { %>
                        <li><%= question.answers[i].answerText %></li>
                    <% } %>
                    </ul>
                </div>
                <% } %>

                <form method="post" action="/admin/question/<%= question.id %>/answer">
                    <input type="hidden" id="questionId" name="questionId" value="<%= question.id %>" />
                    <div class="form-group">
                        <label for="answerText"></label>
                        <input type="text" class="form-control input-sm" id="answerText" name="answerText" placeholder="Enter the text of your answer">
                    </div>
                    <button type="submit" class="btn btn-default btn-sm">Add an Answer</button>
                    <!-- <a href="/admin/questions" class="btn btn-default btn-danger btn-sm">Cancel</a> -->
                </form>

                <!-- END CONTENT -->
            </div>
        </div>
    </div>
</body>
</html>